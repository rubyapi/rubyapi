root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
# As default in RuboCop:
# https://github.com/rubocop/rubocop/blob/master/config/default.yml#L932
max_line_length = 120

[*.md]
indent_style = space
indent_size = 2
